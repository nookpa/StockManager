<%= render 'layouts/errors', object: product %>
<%= form_for(@product, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :type, options_for_select(Product::PRODUCT_TYPES.map{|x|[x.humanize.capitalize,x]}), {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :color, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :color, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= number_field_tag :amount, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cost_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cost_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :remark, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :remark, class: "form-control" %>
    </div>
  </div>
  <div class="form-actions">
    <div class="btn-set col-md-offset-3">
      <%= link_to "Cancel", (product.id.nil? ? products_path : product_path(id: product.id)), class: "btn btn-default btn-sm" %>
      <%= f.submit "Save", class: "btn btn-success btn-sm" %>
    </div>
  </div>
<% end %>
