<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Color</th>
      <th>Cost Price</th>
      <th>Item Count</th>
      <th>In Stock Count</th>
      <th>Sold Out Count</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.type.humanize.capitalize %></td>
        <td><%= product.color %></td>
        <td><%= product.cost_price %></td>
        <td><%= product.items.count %></td>
        <td><%= product.in_stock_items.count %></td>
        <td><%= product.sold_out_items.count %></td>
        <td>
          <%= link_to 'Show', product, class: "btn btn-success btn-sm" %>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Destroy', product, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>