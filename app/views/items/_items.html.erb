<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Product</th>
      <th>Sale Price</th>
      <th>Sale Date</th>
      <th>Type</th>
      <th>Status</th>
      <th>User</th>
      <th>Member</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.product.name rescue "" %></td>
        <td><%= item.sale_price %></td>
        <td><%= item.sale_date %></td>
        <td><%= item.type.humanize rescue "" %></td>
        <td><%= item.status.humanize rescue "" %></td>
        <td><%= item.user.name rescue "" %></td>
        <td><%= item.member.name rescue "" %></td>
        <td>
          <%= link_to 'Show', item, class: "btn btn-success btn-sm" %>
          <%= link_to 'Edit', edit_item_path(item), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Destroy', item, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>